<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :start %>
  <%= text_input f, :start %>
  <%= error_tag f, :start %>

  <%= label f, :stop %>
  <%= text_input f, :stop %>
  <%= error_tag f, :stop %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
